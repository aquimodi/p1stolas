# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN - DATACENTER MANAGER
# ===========================================

# ===== CONFIGURACIÓN DEL SERVIDOR =====
NODE_ENV=production

# IP del servidor (usar la IP real del servidor Windows)
IP_ADDRESS=192.168.1.100

# ===== CONFIGURACIÓN DEL FRONTEND =====
# URL de la API (usar la IP del servidor backend)
VITE_API_URL=http://192.168.1.100:3002/api
VITE_DEBUG_MODE=false
VITE_DEMO_MODE=false
VITE_CONTACT_EMAIL=info@datacenter-manager.com

# ===== CONFIGURACIÓN DE NGINX =====
# Puerto del servidor web (NGINX)
WEB_PORT=80
HTTPS_PORT=443

# ===== CONFIGURACIÓN DE LOGS =====
LOG_LEVEL=info
LOG_PATH=D:\nginx\logs

# ===== CONFIGURACIÓN DE ARCHIVOS =====
# Directorio web
WEB_ROOT=D:\nginx\pistolas
NGINX_ROOT=D:\nginx

# ===== CONFIGURACIÓN DE SEGURIDAD =====
# Habilitar HTTPS (requiere certificados)
ENABLE_HTTPS=false
SSL_CERT_PATH=D:\nginx\ssl\cert.pem
SSL_KEY_PATH=D:\nginx\ssl\cert.key

# ===== CONFIGURACIÓN DE CORS =====
# Permitir acceso desde cualquier origen
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization