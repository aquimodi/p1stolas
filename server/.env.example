# Server Configuration
PORT=3002
IP_ADDRESS=0.0.0.0       # Listen on all interfaces for local development
NODE_ENV=production       # Set to production for deployed environments

# JWT Configuration (JSON Web Token)
# CRITICAL: Use a strong, unique secret key in production (minimum 32 characters)
JWT_SECRET=your_strong_unique_secret_key_here_minimum_32_chars

# Database Configuration (SQL Server)
DB_SERVER=your_server_name
DB_NAME=QEIS1DAT
DB_USER=your_username
DB_PASSWORD=your_password_CHANGE_IN_PRODUCTION
DB_PORT=1433
DB_ENCRYPT=true

# API Keys
MISTRAL_API_KEY=your_mistral_api_key_here

# Logging
LOG_LEVEL=info           # error, warn, info, verbose, debug, silly

# CORS Configuration (CRITICAL: Set to your frontend domain in production)
CORS_ORIGIN=https://your-frontend-domain.com

# File Upload Limits
MAX_FILE_SIZE=10485760   # 10MB en bytes